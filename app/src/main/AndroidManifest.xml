<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permiso necesario para cargar imágenes desde URLs externas -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KDramasManager">
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ContactActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <!--
         SplashActivity: Pantalla de bienvenida que inicia la aplicación.
             Después del splash, navega directamente a ListarKdramas
        -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- MainActivity: Formulario para registrar nuevos K-Dramas -->
        <activity android:name=".MainActivity" /> <!-- ListarKdramas: Pantalla principal tras el splash, muestra la lista de K-Dramas registrados -->
        <activity android:name=".ListarKdramas" /> <!-- EditarKdrama: Permite modificar o eliminar un K-Drama existente -->
        <activity android:name=".EditarKdrama" />
    </application>

</manifest>