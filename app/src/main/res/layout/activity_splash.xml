<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout para la pantalla de bienvenida que se muestra al iniciar la aplicación.

    Estructura:
    - Fondo de color sólido con estilo institucional.
    - Logo centrado en la parte superior.
    - Nombre y eslogan de la aplicación.
    - Indicador de carga mediante ProgressBar.

    Responsabilidades:
    - Presentar la identidad visual de la aplicación.
    - Indicar que se está cargando el entorno inicial.
    - Transicionar automáticamente hacia MainActivity.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/purple_500"
    android:padding="40dp">

    <!-- Imagen del logo de la aplicación con color blanco aplicado mediante tint -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_kdrama_default"
        android:contentDescription="@string/app_logo"
        app:tint="@color/white" />

    <!-- Nombre de la aplicación en estilo destacado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <!-- Eslogan breve que complementa el nombre de la aplicación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_tagline"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp" />

    <!-- Indicador de carga circular en modo indeterminado -->
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:indeterminateTint="@color/white" />

</LinearLayout>