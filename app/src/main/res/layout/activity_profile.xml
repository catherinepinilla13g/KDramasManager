<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/imgFotoPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_person"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background" />

    <!-- Campo para URL de la foto -->
    <EditText
        android:id="@+id/edFotoUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL de la foto de perfil"
        android:layout_marginTop="12dp"
        android:inputType="textUri" />

    <!-- Nombre editable -->
    <EditText
        android:id="@+id/edNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_marginTop="16dp" />

    <!-- Email (solo lectura) -->
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="correo@example.com"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp" />

    <!-- Botón guardar cambios -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar cambios"
        android:layout_marginTop="24dp" />

    <!-- Botón abrir chat global -->
    <Button
        android:id="@+id/btnChatGlobal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar al chat global"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />

    <!-- Botón abrir chat privado -->
    <Button
        android:id="@+id/btnChatPrivado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar a chat privado"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white" />

    <!-- Botón cerrar sesión -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white" />

</LinearLayout>




